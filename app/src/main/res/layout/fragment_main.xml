<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 본문의 내용 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="@string/hangeul_oneul"
            android:textSize="46sp"
            android:textColor="@color/text_black"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnOpen"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="12dp"

            android:background="@color/white"
            android:src="@drawable/ic_menu"
            app:layout_constraintBottom_toTopOf="@id/calendar_conatainer_main"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_button_to_change_main"
            android:layout_width="42sp"
            android:layout_height="21sp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/toggle_selector"

            android:textOff=" "
            android:textOn=" "
            app:layout_constraintBottom_toTopOf="@id/calendar_conatainer_main"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/calendar_conatainer_main"
            android:layout_width="match_parent"
            android:layout_height="480sp"
            android:orientation="vertical"

            android:layout_margin="28dp"
            android:background="@drawable/ic_calendar_box"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <RelativeLayout
                android:layout_width="62sp"
                android:layout_height="32sp"
                android:background="@drawable/ic_small_button"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 캘린더"
                    android:textSize="18dp"
                    android:textColor="@color/dark_beige"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>


            <FrameLayout
                android:id="@+id/fragment_calendar_main"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_add_event_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_add_buttons"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="일정추가"
                android:textColor="@color/dark_beige"
                android:textSize="36sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button_add_diary_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_add_buttons"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="일기추가"
                android:textColor="@color/dark_beige"
                android:textSize="36sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daily schedule"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            />

        <Button
            android:id="@+id/button_diary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daily diray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 밀고 들어오는 드로어-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="625dp"
            android:background="@color/drawer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Calandar_list"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:background="@color/Calandar_list"

                android:fontFamily="@font/oneulfont"
                android:gravity="bottom"

                android:padding="10dp"
                android:text="캘린더 목록"
                android:textSize="45dp" />

            <Button
                android:id="@+id/menu_myCalandar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:background="@color/menu_myCalandar"

                android:fontFamily="@font/oneulfont"
                android:gravity="left"
                android:paddingLeft="40dp"
                android:text="내 캘린더"
                android:textSize="35dp" />

            <Button
                android:id="@+id/add_menu"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:color/transparent"

                android:baselineAligned="false"
                android:drawableLeft="@drawable/ic_plusbtwhite"
                android:drawablePadding="1dp"
                android:fontFamily="@font/oneulfont"
                android:paddingLeft="20dp"

                android:text="캘린더 추가"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableRight="@drawable/ic_checkbt_white"
                android:drawablePadding="15dp"
                android:fontFamily="@font/oneulfont"
                android:paddingLeft="50dp"
                android:text="캘린더 이름(최대 10자)"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <RadioGroup
                android:id="@+id/circles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/circle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/selector1"
                    android:padding="2dp"
                    />

                <RadioButton
                    android:id="@+id/circle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector2" />

                <RadioButton
                    android:id="@+id/circle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector3" />

                <RadioButton
                    android:id="@+id/circle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector4" />

                <RadioButton
                    android:id="@+id/circle5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector5" />

                <RadioButton
                    android:id="@+id/circle6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector6" />

                <RadioButton
                    android:id="@+id/circle7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector7" />

                <RadioButton
                    android:id="@+id/circle8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector8" />

            </RadioGroup>


        </LinearLayout>

        <ImageButton
            android:id="@+id/settingBt"
            android:layout_width="42dp"
            android:layout_height="42dp"

            android:layout_gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_setting_bt_foreground"
            android:src="@drawable/ic_setting_bt_foreground"
            tools:src="@drawable/ic_setting_bt_foreground" />

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>