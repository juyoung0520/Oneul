<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/text_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오후 3:00"/>

    <TextView
        android:id="@+id/text_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_time_start"
        android:text="오후 3:00"/>

    <LinearLayout
        android:id="@+id/linear_layout_line"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/text_time_end"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/primary"/>

    <TextView
        android:id="@+id/text_schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/linear_layout_line"
        android:layout_centerVertical="true"
        android:text="소프 회의"/>

</RelativeLayout>