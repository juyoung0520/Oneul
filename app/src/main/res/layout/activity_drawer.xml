<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    tools:context=".DrawerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 본문의 내용 -->

        <ImageButton
            android:id="@+id/btnOpen"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/ic_menu_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 밀고 들어오는 드로어-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="625dp"
            android:background="@color/drawer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Calandar_list"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:background="@color/Calandar_list"

                android:fontFamily="@font/oneulfont"
                android:gravity="bottom"

                android:padding="10dp"
                android:text="캘린더 목록"
                android:textSize="45dp" />

            <Button
                android:id="@+id/menu_myCalandar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:background="@color/menu_myCalandar"

                android:fontFamily="@font/oneulfont"
                android:gravity="left"
                android:paddingLeft="40dp"
                android:text="내 캘린더"
                android:textSize="35dp" />

            <Button
                android:id="@+id/add_menu"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:color/transparent"

                android:baselineAligned="false"
                android:drawableLeft="@drawable/ic_plusbtwhite"
                android:drawablePadding="1dp"
                android:fontFamily="@font/oneulfont"
                android:paddingLeft="20dp"

                android:text="캘린더 추가"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableRight="@drawable/ic_checkbt_white"
                android:drawablePadding="15dp"
                android:fontFamily="@font/oneulfont"
                android:paddingLeft="50dp"
                android:text="캘린더 이름(최대 10자)"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <RadioGroup
                android:id="@+id/circles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/circle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/selector1"
                    android:padding="2dp"
                    />

                <RadioButton
                    android:id="@+id/circle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector2" />

                <RadioButton
                    android:id="@+id/circle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector3" />

                <RadioButton
                    android:id="@+id/circle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector4" />

                <RadioButton
                    android:id="@+id/circle5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector5" />

                <RadioButton
                    android:id="@+id/circle6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector6" />

                <RadioButton
                    android:id="@+id/circle7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector7" />

                <RadioButton
                    android:id="@+id/circle8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:foreground="@drawable/selector8" />

            </RadioGroup>


        </LinearLayout>

        <ImageButton
            android:id="@+id/settingBt"
            android:layout_width="42dp"
            android:layout_height="42dp"

            android:layout_gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_setting_bt_foreground"
            android:src="@drawable/ic_setting_bt_foreground"
            tools:src="@drawable/ic_setting_bt_foreground" />

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>