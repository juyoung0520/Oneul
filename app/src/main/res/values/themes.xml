<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Oneul" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialCalendarTheme">@style/DatePicker</item>


    <!-- Font -->
    <item name="android:buttonStyle">@style/OneulButtonStyle</item>
    <item name="android:editTextStyle">@style/OneulEditTextStyle</item>
    <item name="android:radioButtonStyle">@style/OneulRadioButtonStyle</item>
    <item name="android:checkboxStyle">@style/OneulCheckboxStyle</item>
    <item name="android:textViewStyle">@style/OneulTextViewStyle</item>

    </style>

    <style name="Viewpager_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent_blak</item>
        <item name="android:background">@color/transparent_blak</item>
    </style>

    <style name="DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="textAppearanceHeadline4">@style/head_text_style</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

</resources>